    <span class="nx">block</span><span class="p">.</span><span class="nx">forEach</span><span class="p">((</span><span class="nx">line</span><span class="p">,</span> <span class="nx">id</span><span class="p">)</span><span class="o">=&gt;</span><span class="p">{</span>
        <span class="k">if</span><span class="p">(</span><span class="nx">line</span><span class="p">.</span><span class="nx">match</span><span class="p">(</span><span class="err">\</span><span class="o">/^</span><span class="err">\#\</span><span class="o">/</span><span class="nx">g</span><span class="p">)){</span>
