        <span class="k">this</span><span class="p">.</span><span class="nx">parsing</span> <span class="o">=</span> <span class="kd">function</span> <span class="p">(){</span>
            <span class="k">this</span><span class="p">.</span><span class="nx">mdToBlock</span><span class="p">();</span>
            <span class="c1">// this.heading();</span>
