<span class="kd">const</span> <span class="nx">Markdown</span> <span class="o">=</span> <span class="p">(</span><span class="kd">function</span> <span class="p">(){</span>
    <span class="kd">function</span> <span class="nx">Parser</span><span class="p">(){</span>
